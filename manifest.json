{
    "manifest_version": 2,
    "name": "Comment Extractor",
    "version": "1.0",
    "description": "Extract comments from the current page",
    "icons": {
        "48": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Extract Comments"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}
